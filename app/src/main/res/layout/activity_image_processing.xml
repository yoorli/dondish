<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewInput"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNext"
        android:layout_marginLeft="50dp"
        android:background="#ffffff"
        android:src="@drawable/ic_arrow_downward_black_24dp"

        />

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewInput"
        android:layout_marginLeft="20dp"
        android:text="이미지 처리 후"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnRunOCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewInput"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton"
        android:textColor="#FFFFFF"
        android:text="문자인식" />

    <ProgressBar
        android:id="@+id/pbLogins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewInput"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewOutput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/btnRunOCR" />


</RelativeLayout>