<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="kr.ac.kpu.block.smared.LedgerStatFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:id="@+id/ibLastMonth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:src="@drawable/ic_chevron_left_black_24dp"

        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/tvLedgerMonth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ibLastMonth"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="9dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:text="불러오는 중"/>
    <ImageButton
        android:id="@+id/ibNextMonth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvLedgerMonth2"

        android:src="@drawable/ic_chevron_right_black_24dp"
        android:background="@android:color/transparent"
        />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@id/ibLastMonth2"
        >

    </com.github.mikephil.charting.charts.PieChart>


</RelativeLayout>
